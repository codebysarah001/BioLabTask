@model UserRegistrationMVC.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Username:")
        @Html.TextBox("Username", null, new { @class = "form-control", required = "required" }) <!-- Corrected -->
    </div>

    <div class="form-group">
        @Html.Label("Password:")
        @Html.Password("Password", null, new { @class = "form-control", required = "required" }) <!-- Corrected -->
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
}
